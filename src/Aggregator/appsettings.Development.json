{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=aggregator;Username=postgres;Password=postgres;"
  },
  "Database": {
    "ConnectionString": "Host=localhost;Port=5432;Database=aggregator;Username=postgres;Password=postgres;",
    "CommandTimeout": 60,
    "MaxRetryAttempts": 5,
    "EnableSqlLogging": true
  },
  "HttpClient": {
    "TimeoutSeconds": 60,
    "HandlerLifetimeMinutes": 5,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 2000,
    "IgnoreSslErrors": true,
    "UserAgent": "Aggregator Bot 1.0 (Development)"
  },
  "Parsing": {
    "DelayBetweenRequestsMs": 2000,
    "ImagesFolder": "Images",
    "SaveImages": true,
    "EnableDetailedLogging": true,
    "EnabledParsers": [ "AskStudio", "ZNWR" ]
  }
}
